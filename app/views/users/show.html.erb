          <p class="total-balance">Total Balance: <span>$<%= @user.balance %></span></p>
          <div class="line"></div>
          <h4>Add Funds With</h4>
          <ul class="nav">
            <li>
              <label>
                <input type="radio" name="select-one">
                <%= image_tag "pay-pal.png" %></label>
            </li>
            <li>
              <label>
                <input type="radio" name="select-one">
                <%= image_tag "add-to-card.png" %></label>
            </li>
          </ul>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default pull-left rejection" data-dismiss="modal">Withdraw MONEY</button>
      </div>
    </div>
  </div>
</div>