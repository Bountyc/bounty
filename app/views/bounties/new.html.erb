<div class="container">
  <div class="row">
    <div class="col-sm-8">
      <div class="left-side">
        <%= form_for(@bounty) do |f| %>
          <div class="form-group">
            <%= f.label :title, :class => "control-label" %>
            <%= f.text_field :title, :class => "form-control", :id => "title" %>
          </div>
          <div class="form-group">
            <!--<label class="control-label" for="desc">Description</label>-->
            <div id="wmd-editor" class="wmd-panel">
              <div id="wmd-button-bar"></div>
              <%= f.text_area :description, :id=>"wmd-input" %>

              <div id="wmd-preview" style="border:none">
                
              </div>
              <div id="wmd-output" class="wmd-panel" style="display:none">
                <h4>Script</h4>
              </div>
            </div>
          </div>
          <!--<div class="form-group">
            <label class="control-label" for="title">Attach Files</label>
