

<div class="container">
	<div class="row">
		<div class="col-sm-8">
			<div class="left-side">

				<ul class="nav nav-tabs nav-justified">
					<li class="active"> <a  href="#open" data-toggle="tab">Open Bounties</a> </li>
					<li><a href="#resolved" data-toggle="tab">Resolved Bounties</a> </li>
					<% if user_signed_in? %>
						<li><a href="#my" data-toggle="tab">My Bounties</a> </li>
					<% end %>
				</ul>
				<div class="tab-content">
					<div class="tab-pane active fade in" id="open">
						<%= render "bounties/preview_list",bounty_list: @open_bounties, total_bounty_list_count: @open_bounties_count %>
					</div>

					<div class="tab-pane fade" id="resolved">
						<%= render "bounties/preview_list",bounty_list: @resolved_bounties, total_bounty_list_count: @resolved_bounties_count %>
					</div>

					<% if @signed_in_user %>
					<div class="tab-pane fade" id="my">
						<%= render "bounties/preview_list",bounty_list: @my_bounties, total_bounty_list_count: @my_bounties_count %>
					</div>
					<% end %>
				</div>
			</div>
		</div>
		<%= render "bounties/highest_bounties"%>
	</div>
</div>