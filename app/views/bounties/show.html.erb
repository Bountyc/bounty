role: <%= @user_role %>

<br><br><br>
<% if @user_role == :hunter %>
	<%= link_to "I started working on this", add_working_user_bounty_path(@bounty.id)%>
<% end %>

<% if @user_role != :guest %>
	<%= form_for(:answer, :url => {:action => "add_answer"}) do |a| %>
  		a.text_area(:description, :size => "40x5")
  		submit_tag("Add Answer")
	<% end %>
<% end %>

