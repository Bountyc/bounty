<%= form_for(@answer) do |a| %>
          <div class="form-group">
            <!--     <input type="text" class="form-control" id="desc">-->
            <div id="wmd-editor" class="wmd-panel">
              <div id="wmd-button-bar"></div>
              <%= hidden_field_tag "bounty_id", bounty_id %>
              <%= a.text_area :description, :id=>"wmd-input" %>
              <div id="wmd-preview" class="wmd-panel" style="border: none;">
                <h4>Preview</h4>
              </div>
              
            </div>

          </div>
          
          
          <hr class="line">
          <%= button_tag("Post Your Answer", type: 'submit', class: "btn btn-default custom-btn") %>
          <span class="warning-message">You cannot edit your answer later! Make sure your answer answers the bounty, and in nearly ALL situations answers on BountyC should have code! </span>

          <span class="warning-message">Be aware that answering a bounty does not guarantee getting the bounty!</span>
        <% end %>
        <%= javascript_include_tag 'wmd', 'data-turbolinks-track' => true %>
        <%= javascript_include_tag 'chosen.jquery', 'data-turbolinks-track' => true %>
