<div class="post-body">
          <h3><%= image_tag("comment-icon.png")%> Resolution is <span>REJECTED</span></h3>
          <%= markdown(bounty_hunter.answer.description) %>
        </div>

<div class="rejection-panel">
          <h3><%= image_tag("error-icon.png")%> Reason for <span>REJECTION</span></h3>
          <p><%= bounty_hunter.answer.denial_reason %></p>
          <a href="#myModal" role="button" class="btn" data-toggle="modal" class="btn btn-red"> DISPUTE </a> 
      </div>
<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        
        <h3 class="modal-title" id="myModalLabel">Reason for Dispute
        
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><%= image_tag "sm-crose-icon.png" %></button>
        
         
      </div>
      <%= form_for(@dispute) do |d| %>
        <div class="modal-body">
          <%= d.text_area :reason %>
          <%= hidden_field_tag(:bounty_hunter_id, bounty_hunter.id) %>
        </div>
        <div class="modal-footer">
          <%= submit_tag("DISPUTE", class: "btn btn-default pull-left rejection") %>
        </div>
      <% end %>
    </div>
  </div>
</div>
