<header>
	<% if !flash[:error].nil? %>
		<div style="width: 100%; height:50px; background-color:#B00000; text-align:center; line-height: 50px; color:white;font-family: Comic Sans MS;font-size: 17px;">
			<%= flash[:error] %>
		</div>
	<% end %>
  <div class="container">
    <div class="logo"> <%= link_to image_tag("logo.jpg", :alt => "rss feed"), root_url %></div>
    <div class="right-content after-sign-in">
      <ul>
        <li><a href="#">Help</a></li>
        <li>
          <% if @signed_in_user %>
          <%= render "notifications/preview_list" %>
          <% end %>
        </li>
        <li><a href="#">Profile</a></li>
      </ul>
    </div>
  </div>
  <nav class="navbar navbar-default">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar"> <span class="sr-only">Toggle navigation</span> <span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span> </button>
        <% if user_signed_in? %>
          <%= link_to "Create A Bounty", new_bounty_path, class: "navbar-brand" %>
        <% end %>
    </div>
      <div id="navbar" class="navbar-collapse collapse">
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "Bounties", bounties_path %></li>
          <li><a href="#">Tags</a></li>
          <li><a href="#">Users</a></li>
        </ul>
        <%= form_tag( bounties_path,:method => "get", :class => 'navbar-form navbar-right') do %>
          <%= text_field_tag('search_text', params[:search_text], class: 'form-control', placeholder: "search bounties...") %>
          <!--<a href="#">advanced search</a>-->
        <% end %>
      </div>
      <!--/.nav-collapse --> 
    </div>
  </nav>
  <div class="clr"></div>
</header>