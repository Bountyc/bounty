<div class="container">
  <div class="signinpanel">
        
        <div class="row">
            
               
                <!-- signin0-info -->
            
            
            <div class="col-md-6 col-md-offset-3">
                <h4 class="text-success">Sign In With</h4>

                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                 <label class="control-label" style="padding-top:10px;">Email</label>
                    <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control uname" %>
                     <label class="control-label">Password</label>
                     <%= f.password_field :password, autocomplete: "off", class: "form-control pword", placeholder: "Password"%>
                    <small>
                      <%= link_to "Forgot Your Password?", new_password_path(resource_name) %>
                    </small>
                    <br>
                    <!-- display errors -->
                    <% if flash[:alert] %>
                        <div class="alert alert-danger mtb20" role="alert">
                          <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                          <span class="sr-only">Error:</span>
                          <%= flash[:alert] %>
                        </div>
                    <% end %>

                    <%= f.submit "Sign In", class: "btn-register mtb20" %>
                <% end %>
                 <div class="signin-info">
                    <!-- logopanel -->
                
                    <div class="mb20"></div>
                
  
                    <div class="mb20"></div>
                    
              <a href="<%= user_omniauth_authorize_path(:facebook) %>" ><button class="btn-facebook" style="margin-top:10px;;"> Sign In with Facebook</button></a>
              <a href="<%= user_omniauth_authorize_path(:google_oauth2) %>"><button class="btn-google-plus"> Sign In with Google+</button></a>
              <br>
             <div class="mb20"></div>
                    <strong>Not a member? <%= link_to "Sign up", new_registration_path(resource_name) %></strong>
                
                </div>
            </div><!-- col-sm-5 -->
            
        </div><!-- row -->
        
        
        
    </div>
</div>